{{#if errors}}
<div class="errors">
{{errors}}
</div>
{{/if}}

<h3>Insert new User</h3>
<form action="/login/password2" method="post">
    <label>Name</label>
    <input type="text" name="name" id="" value="{{name}}" />
    <br/>
    <label>Password</label>
    <input type="password" name="password" id="" value="{{password}}" />
    <br/>
    <button type="submit" >OK</button>
</form>
